<div class="content">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="box">
          <div class="" >
            <% if cocktail.photo? %>
            <%= cl_image_tag cocktail.photo.path, class: "box-icon" %>
            <% end %>
          </div>
          <div class="info">
            <h4 class="text-center"><%=  cocktail.name %></h4>
            <%= link_to 'Read doses', cocktail_path(cocktail), class:"btn-treehouse" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
